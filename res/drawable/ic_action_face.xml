<?xml version="1.0" encoding="utf-8"?>

<selector
        xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 無効のとき -->
    <item   android:drawable="@drawable/ic_action_face_disabled"
            android:state_enabled="false"
            />

    <!-- パネルがでていないとき -->
    <item   android:drawable="@drawable/ic_action_face_off"
            android:state_checkable="true"
            android:state_checked="false"
            />

    <!-- パネルがでているとき -->
    <item   android:drawable="@drawable/ic_action_face_on"
            android:state_checkable="true"
            android:state_checked="true"
            />

    <!-- デフォルト -->
    <item   android:drawable="@drawable/ic_action_face_normal"
            />
</selector>
